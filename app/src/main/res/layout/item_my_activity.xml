<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/activity_item_view"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_item_textView_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Расстояние"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/activity_item_view"
        app:layout_constraintTop_toTopOf="@id/activity_item_view" />

    <TextView
        android:id="@+id/activity_item_textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Время"
        android:textColor="#101010"
        android:textSize="16sp"

        app:layout_constraintStart_toStartOf="@id/activity_item_textView_distance"
        app:layout_constraintTop_toBottomOf="@id/activity_item_textView_distance" />

    <TextView
        android:id="@+id/activity_item_textView_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Активность"
        android:textColor="#101010"
        android:textSize="16sp"

        app:layout_constraintEnd_toStartOf="@id/activity_item_textView_date"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@id/activity_item_textView_distance"
        app:layout_constraintTop_toBottomOf="@id/activity_item_textView_time" />

    <TextView
        android:id="@+id/activity_item_textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Дата"
        android:textColor="#808080"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="@id/activity_item_view"
        app:layout_constraintStart_toEndOf="@id/activity_item_textView_activity"
        app:layout_constraintTop_toBottomOf="@id/activity_item_textView_time" />

</androidx.constraintlayout.widget.ConstraintLayout>